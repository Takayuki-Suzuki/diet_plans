%section.text-inter
  .container
    .row
      .col-sm-10.col-sm-offset-1
        %form.sign_in
          %h1 Sign in
          .form-group
            %label Email Address
            .row
              .col-sm-4
                %input.form-control(type="email")
          .form-group
            %label Password
            .row
              .col-sm-4
                %input.form-control(type="password")
          %input(type="submit" value="Sign in" class="button solid-color")
